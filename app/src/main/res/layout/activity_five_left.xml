<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:scrolling_image_view="http://schemas.android.com/apk/res-auto"
    tools:context=".five_left"
    android:background="#000"
    android:id="@+id/five_left">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

                <com.q42.android.scrollingimageview.ScrollingImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    scrolling_image_view:speed="0.3dp"
                    android:layout_alignParentBottom="true"
                    scrolling_image_view:src="@drawable/dragon" />



                    <Button
                        android:layout_marginTop="35dp"
                        android:id="@+id/mic"
                        android:layout_alignParentRight="true"
                        android:onClick="getSpeechInput"
                        android:background="@drawable/mic"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <Button
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35sp"
                        android:visibility="gone"
                        android:textAlignment="gravity"
                        android:fontFamily="cursive"
                        android:background="@drawable/btn2"
                        android:id="@+id/next_five_left"/>


                        <TextView
                            android:layout_marginTop="40dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/aloha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="It's a sleeping dragon..."
                            android:layout_alignParentTop="true"
                            android:textColor="#ffffff"/>

                        <TextView
                            android:layout_marginBottom="20dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/aloha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shhhh, let's just walk around it...without a sound..."
                            android:textColor="#ffffff"
                            />


    </RelativeLayout>

</LinearLayout>