                        <!--android:textColor="#ffffff"-->
                        <!--/>-->
                <!--</RelativeLayout>-->
            <!--</LinearLayout>-->

        </android.support.v7.widget.CardView>
        <!--six-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            app:cardBackgroundColor="@null"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="3dp"
            android:id="@+id/six"
            app:cardCornerRadius="8dp"
            android:visibility="gone"
            >

            <!--<com.q42.android.scrollingimageview.ScrollingImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--scrolling_image_view:speed="0.3dp"-->
                <!--scrolling_image_view:src="@drawable/chest" />-->

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:background="@drawable/chest"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <Button
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn2"
                    android:id="@+id/next_six"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/aloha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Great! You've escaped"
                        android:layout_alignParentTop="true"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/aloha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The journey is over. You found the Treasure!"
                        android:textColor="#ffffff"
                        />
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </GridLayout>

    </RelativeLayout>

</LinearLayout>